<% include ./partials/header %>
<div class="ftco-cover-1 overlay" style="background-image: url('images/waitingLounge.jpg')">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 col-lg-offset-6 col-sm-12">
                <div class="feature-car-rent-box-1">
                    <h2>Login</h2>

                    <% if(message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %>

                    <form action="/login" method="post">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" name="username" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>

                        <button class="ml-auto btn btn-primary" type="submit">Log In</button>
                    </form>

                    <hr>

                    <p>Need an account <a href="/signup">Register</a></p>
                    <p>Go Back <a href="/">Home</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>