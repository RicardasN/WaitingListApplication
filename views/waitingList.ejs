<% include ./partials/header %>
<div class="ftco-cover-1 overlay" style="background-image: url('images/waitingLounge.jpg')">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <% if(currentUser){%>
                    <h3><span class="fa fa-user"></span> Welcome specialist <%= currentUser.username %></h3>
                <%}%>
            </div>
            <div class="col-lg-12">
                <div class="feature-car-rent-box-1">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Specialist</th>
                                <th scope="col">Time Remaining</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<clients.length; i++){ %>
                            <tr>
                                <th scope="row"><%= clients[i].client_id %></th>
                                <td><%= clients[i].name %></td>
                                <td><%= clients[i].sepcialist_name %></td>
                                <td>5 minutes</td>
                                <% if(currentUser){%>
                                <td><a href="/client/changeState/<%=clients[i].number%>">Mark as Served</a></td>
                                <%}%>
                            </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>